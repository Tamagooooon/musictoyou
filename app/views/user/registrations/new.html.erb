<div class="container">
  <div class="row d-flex align-items-center justify-content-center">

    <div class="col-lg-12 mt-3 text-center text-white midashi">
      <h1><strong>新規登録</strong></h1>
    </div>

    <div class="col-lg-12 mt-3 text-center text-white user signup">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "user/shared/error_messages", resource: resource %>

        <div class="field py-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field py-1">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field py-2">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field py-2">
          <%= f.label :確認用パスワード%><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions py-2">
          <%= f.submit "Sign up", class:"btn btn-outline-light" %>
        </div>
      <% end %>

      <%= render "user/shared/links" %>
    </div>
  </div>
</div>