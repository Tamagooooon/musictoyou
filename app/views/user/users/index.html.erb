<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12 text-center text-white user">
      <h2><strong>ユーザー 一覧</strong></h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr class="text-white">
            <th>ユーザー画像</th>
            <th>名前</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr class="text-white">
            <td><%= image_tag user.get_profile_image(50, 50) %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>