<div class="container">

  <div class="row mt-2">
    <div class="col-lg-12">
      <h3><%= @user.name %></h3>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-lg-12">
      <%= image_tag 'man1.png' %>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-lg-12">
      <% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-info btn-block" %></p>
      <% end %>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-lg-12">
      <%= render 'user/posts/list', posts: @posts %>
    </div>
  </div>
</div>
