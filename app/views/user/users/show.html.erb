<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center text-white">
      <h1><strong>ユーザー詳細</strong></h1>
    </div>

    <div class="col-lg-4 text-center text-white">
      <h3>ユーザー名　<strong><%= @user.name %></strong></h3>

      <%= image_tag @user.get_profile_image(100,100), class: "rounded-circle" %>

      <%= render 'followlist', users: @users %>

      <% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-outline-light" %></p>
      <% end %>

      <%= render "bookmark", bookmark: @bookmark %>
    </div>

    <div class="col-lg-8 text-center">
      <%= render 'user/posts/list', posts: @posts %>
    </div>
  </div>
</div>
