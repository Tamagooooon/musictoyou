  <div class="row">
    <div class="col-lg-12 text-center text-white posts edit">
      
    <%= form_for(@post, url: post_path(@post)) do |f| %>
    
      <div class="field">
        <%= f.label :アーティスト写真 %><br>
        <%= f.file_field :image, accept: "image/*", :placeholder =>"#{@post.body}" %>
      </div>
      
      <div class="field mt-2">
        <%= f.label :アーティスト名 %><br>
        <%= f.text_field :title, autofocus: true, :placeholder =>"#{@post.title}" %>
      </div>
  
      <div class="field mt-3">
        <%= f.label :共有する曲 %><br>
        <%= f.file_field :audio, accept: "audio/*", :placeholder =>"#{@post.body}" %>
      </div>
  
      <div class="field mt-2">
        <%= f.label :曲名・おすすめ理由 %><br>
        <%= f.text_area :body, :placeholder =>"#{@post.body}" %>
      </div>
  
      <div class="form-group mt-3"><strong>タグ</strong></div>
      <div class="row d-flex justify-content-start m-2">
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_type) do |tag| %>
          <div class="form-check form-check-inline flex flex-wrap">
            <%= tag.label do %>
              <%= tag.check_box %>
              <%= tag.text %>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <div class="mt-2"><%= f.submit "更新する", class: "btn btn-outline-light mx-auto"%></div>
    <% end %>
  </div>
</div>