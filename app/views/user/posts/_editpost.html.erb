  <div class="row">
    <div class="col-lg-12 text-center">
    <span>現在ログイン中のユーザー：<%= current_user.name %></span>
    <%= form_for(@post, url: post_path(@post)) do |f| %>
      <div class="row mt-5">
        <div class="col-lg-12 text-center">
          <%= f.label :アーティスト写真 %><br>
          <%= f.file_field :image, accept: "image/*", :placeholder =>"#{@post.body}" %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-lg-12 text-center">
          <%= f.label :アーティスト名 %><br>
          <%= f.text_field :title, autofocus: true, :placeholder =>"#{@post.title}" %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-lg-12 text-center">
          <%= f.label :共有する曲 %><br>
          <%= f.file_field :audio, accept: "audio/*", :placeholder =>"#{@post.body}" %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-lg-12 text-center">
          <%= f.label :曲名・おすすめ理由 %><br>
          <%= f.text_area :body, :placeholder =>"#{@post.body}" %>
        </div>
      </div>
      <div class="form-group m-5"><strong>タグ</strong></div>
      <div class="row d-flex justify-content-start m-5">
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_type) do |tag| %>
          <div class="form-check form-check-inline flex flex-wrap">
            <%= tag.label do %>
              <%= tag.check_box %>
              <%= tag.text %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div><%= f.submit "更新する" %></div>
    <% end %>
    </div>
  </div>