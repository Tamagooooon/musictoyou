<%= form_with model: @post do |f| %>
  <div class="field">
    <%= f.label :アーティスト写真 %><br>
    <%= f.file_field :image, accept: "image/*", :placeholder =>"#{@post.body}" %>
  </div>
      
  <div class="field">
    <%= f.label :アーティスト名 %><br>
    <%= f.text_field :title, autofocus: true, :placeholder =>"#{@post.title}" %>
  </div>
      
  <div class="field mt-2">
    <%= f.label :共有する曲 %><br>
    <%= f.file_field :audio, accept: "audio/*", :placeholder =>"#{@post.body}" %>
  </div>
      
  <div class="field mt-2">
    <%= f.label :曲名・おすすめ理由 %><br>
    <%= f.text_area :body, :placeholder =>"#{@post.body}" %>
  </div>
      
  <div class="form-group mt-2"><strong>タグ</strong></div>
  
  <div class="row d-flex justify-content-start m-4">
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_type) do |tag| %>
    <div class="form-check form-check-inline flex flex-wrap">
    <%= tag.label do %>
      <%= tag.check_box %>
      <%= tag.text %>
    <% end %>
    </div>
  <% end %>
  </div>
  
  <div class="row mt-3">
    <div class="col-lg-12 text-center">
      <%= f.submit '共有する', class: "btn btn-outline-light mx-auto" %>
    </div>
  </div>
<% end %>