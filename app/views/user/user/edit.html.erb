<div class="container">
  <div class="row mt-2">
    <div class="col-lg-12">
      <h2>プロフィール編集</h2>
    </div>
  </div>
    
      <%= form_with model: @user do |f| %>
      <div class="row mt-2">
        <div class="col-lg-12">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
      </div>

      <div class="row mt-2">
        <div class="col-lg-12">
          <label for="inputImage">ProfileImage</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
      </div>

      <div class="row mt-2">
        <div class="col-lg-12">
          <%= f.submit "変更を保存" %>
        </div>
      </div>
      <% end %>
</div>

