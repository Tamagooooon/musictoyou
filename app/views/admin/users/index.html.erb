<div class="container">
  <div class="row">
    
    <div class="col-lg-12 text-center text-white admin usersmidashi">
      <h2><strong>ユーザー 一覧</strong></h2>
    </div>
    
    <div class="col-lg-12 text-center text-white admin users">
      <table class="table table-hover table-inverse">
        <thead>
          <tr class="text-white">
            <th>ユーザー画像</th>
            <th>名前</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr class="text-white">
            <td><%= image_tag user.get_profile_image(50, 50), class: "rounded-circle" %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'ユーザー詳細', admin_user_path(user.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      
      <%= paginate @users %>
    
    </div>
  </div>
</div>