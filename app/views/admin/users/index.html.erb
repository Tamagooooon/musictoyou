<div class="container" >
  <div class="row">
    <div class="col-lg-12 mt-4 text-center text-white admin midashi">
      <h1><strong>ユーザー 一覧</strong></h1>
    </div>
    
    <div class="col-lg-12 text-center text-white admin posts">
      <table class="table table-hover table-inverse">
        <thead>
          <tr class="text-white">
            <th>ユーザー画像</th>
            <th>名前</th>
            <th>email</th>
            <th>ユーザーの詳細</th>
            <th>投稿の一覧</th>
            <th>コメントの詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr class="text-white">
            <td><%= image_tag user.get_profile_image(50, 50), class: "rounded-circle" %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to "ユーザー詳細へ", admin_user_path(user.id), class: "btn btn-outline-warning text-white mx-auto" %>
            </td>
            <td>
              <%= link_to "投稿一覧へ", admin_posts_path, class: "btn btn-outline-warning text-white mx-auto" %>
            </td>
            <td>
              <%= link_to "コメント一覧へ", admin_posts_path, class: "btn btn-outline-warning text-white mx-auto" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="pagination justify-content-center mt-3">
      <%= paginate @users%>
    </div>
  </div>
</div>